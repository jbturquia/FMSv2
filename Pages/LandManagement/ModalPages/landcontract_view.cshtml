                                <label>Authorized Representative</label>
                                <textarea class="Representative form-control form-control-sm triggercontractinfo" id="repTextArea" id="viewRepresentative" readonly></textarea>
                            </div>
                            <div class="col-md-6">
                                <label>Heirs</label>
                                <textarea class="Heirs form-control form-control-sm triggercontractinfo" id="heairTextArea" readonly></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="row">
                                <div class="col-md-4 form-group">
                                    <label>Lease Period</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="far fa-calendar-alt"></i>
                                            </span>
                                        </div>
                                        <input type="text" class="form-control form-control-sm float-right triggercontractinfo" id="viewlease_period" readonly>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label>Lease Term (Number of Years)</label>
                                    <input type="text" class="terms reservationdate form-control form-control-sm float-right triggercontractinfo" id="viewLeaseTerm" readonly>
                                </div>
                                <div class="col-md-4">
                                    <label>Advance Payment (Number of Years)</label>
                                    <input class="advance_payment form-control form-control-sm" type="number" id="viewAdvancePayment" readonly>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label> Start of Payment:</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="far fa-calendar-alt"></i>
                                                </span>
                                            </div>
                                            <input type="text" class="viewStartOfPayment reservationdate form-control form-control-sm float-right triggercontractinfo" id="reservationdate" readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label>Advance Payment Amount</label>
                                    <input class="advance_payment_amount form-control form-control-sm triggerdetail triggercontractinfo" type="number" id="viewAmountOfAdvancePayment" readonly>
                                </div>
                                <div class="col-md-4">
                                    <label>Payment Terms</label>
                                    <input class="PaymentTermsCode form-control form-control-sm triggerdetail triggercontractinfo" type="text" id="viewPaymentTerm" readonly>
                                </div>  
                            </div>
