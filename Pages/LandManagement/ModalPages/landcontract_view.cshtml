                            <div class="col-md-3">
                                <label>Document Type/Document Number</label>
                                <input type="text" class="form-control form-control-sm form-control-border border-width-2" id="viewDocumentType" readonly>
                            </div>
                            <div class="col-md-3">
                                <label>Lot Number</label>
                                <input type="text" class="form-control form-control-sm form-control-border border-width-2" id="viewLotNumber" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-3">
                                <label>Landowner Name</label>
                                <input type="text" class="form-control form-control-sm form-control-border border-width-2" id="viewLandowner" readonly>
