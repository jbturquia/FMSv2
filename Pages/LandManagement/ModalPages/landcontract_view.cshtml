                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <!-- START: CONTRACT INFORMATION -->
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-3">
                                <label>Land Contract Code</label>
                                <input type="text" class="form-control form-control-sm form-control-border border-width-2" id="viewLandContractCode" readonly>
                            </div>
                            <div class="col-md-3">
                                <label>Land Information Code</label>
                                <input type="text" class="form-control form-control-sm form-control-border border-width-2" id="viewLandInformationCode" readonly>
