<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">System Activity Logs</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 col-lg-3">
                                <select id="getDataTop" class="form-control form-control-sm">
                                    <option selected disabled>Get # of records</option>
                                    <option value="10">10</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                                    <option value="500">500</option>
                                    <option value="1000">1000</option>
                                </select>
                            </div>
                            <div class="col-md-6 col-lg-7">
                                <input type="text" class="form-control form-control-sm" id="logsdatetimerange">
                            </div>
                            <div class="col-md-12 col-lg-2 text-center">
                                <button class="btn btn-info btn-sm" style=" width: 100%;" onclick="loadLogs('Logs')" title="Reload Table"><i class="fas fa-redo-alt"></i> Load Data</button>
                            </div>
                        </div>
                        <hr />
                        <table id="tbl_Logs" class="table table-bordered table-striped table-sm" style="width:100%" data-viewpage="pages/_admin/modalpages/activities_view">
                            <thead>
                                <tr style="text-align:center">
                                    <th class="logId">Actions</th>
                                    <th class="username">User</th>
                                    <th class="activity">Activity</th>
                                    <th class="logdatetime">Executed on</th>
                                </tr>
                            </thead>
                            <tbody id="tbl_Logs-data">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/_Admin/activities.js"></script>